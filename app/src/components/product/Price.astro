---
interface Props {
    text?:string
}

const { text } = Astro.props
---
<div class="flex gap-2 text-center">
    <span class="font-bold text-2xl block">
        {text}
    </span>
    <div class="flex w-full items-center justify-between">
        <slot name="discount" />
        <slot name="beforePrice" />
    </div>
</div>