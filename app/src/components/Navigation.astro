---
import { Image } from "astro:assets";
import ImgAvatar from "../assets/image-avatar.png";
import { MobileNav } from "../components/MobileNav";
import { ToggleNav } from "../components/ToggleNav";
import NavigationLink from "./NavigationLink.astro";
import { CartIcon } from "./icons/CartIcon";
import { CloseIcon } from "./icons/CloseIcon";
import { MenuIcon } from "./icons/MenuIcon";
---

<header
  class="relative min-w-[375px] w-[375px] md:w-[768px] lg:w-[1440px] max-w-[1440px]"
>
  <nav class="flex justify-between px-4 py-4 lg:py-0 lg:h-24 border-b-2">
    <div class="flex gap-x-4 items-center">
      <ToggleNav client:load>
        <MenuIcon />
      </ToggleNav>
      <h1 class="text-4xl font-extrabold">sneakers</h1>
      <ul
        class="max-lg:hidden flex gap-x-4 links-wrapper text-base font-normal h-full"
      >
        <NavigationLink>
          <a href="#Collections">Collections</a>
        </NavigationLink>
        <NavigationLink>
          <a href="#Men">Men</a>
        </NavigationLink>
        <NavigationLink>
          <a href="#Women">Women</a>
        </NavigationLink>
        <NavigationLink>
          <a href="#About">About</a>
        </NavigationLink>
        <NavigationLink>
          <a href="#Contact">Contact</a>
        </NavigationLink>
      </ul>
    </div>

    <div class="flex gap-x-4 items-center">
      <a href="#Cart" title="Cart" aria-label="Cart">
        <CartIcon />
      </a>
      <Image
        src={ImgAvatar}
        class="size-12 rounded-full avatar"
        width={100}
        height={100}
        alt={"Avatar"}
      />
    </div>

    <!-- MOBILE NAV -->
    <MobileNav client:load>
      <div class="flex flex-col w-2/3 bg-white h-full px-4 py-4 gap-10">
        <ToggleNav client:load>
          <CloseIcon />
        </ToggleNav>

        <ul class="flex flex-col gap-3 font-bold text-lg">
          <li>
            <a href="#Collections">Collections</a>
          </li>
          <li>
            <a href="#Men">Men</a>
          </li>
          <li>
            <a href="#Women">Women</a>
          </li>
          <li>
            <a href="#About">About</a>
          </li>
          <li>
            <a href="#Contact">Contact</a>
          </li>
        </ul>
      </div>
    </MobileNav>
  </nav>
</header>
<style>
  .links-wrapper {
    color: hsl(220, 14%, 75%);
  }
  .avatar {
    border: 2px solid transparent;
    cursor: pointer;
  }
  .avatar:hover {
    border: 2px solid hsl(26, 100%, 55%);
  }
</style>
